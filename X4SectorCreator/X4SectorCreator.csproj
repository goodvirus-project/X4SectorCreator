<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
	<PublishSingleFile>true</PublishSingleFile>
	<SelfContained>true</SelfContained>
	<RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
	<IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
	<DebugType>embedded</DebugType>
    <ApplicationIcon>icon\X4SectorCreator.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="Forms\Factories\FactoryForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\Factories\FactoriesForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\Factories\FactoryTemplatesForm.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

  <!-- Ensure runtime data and icons are present in Debug/Release and Publish outputs -->
  <ItemGroup>
    <Content Include="Data\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
    <Content Include="icon\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

